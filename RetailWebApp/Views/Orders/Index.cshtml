@model IEnumerable<RetailWebApp.Models.orders>

@{
    ViewBag.Title = "Orders";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Orders</h2>
    <a asp-action="AddOrder" class="btn btn-primary mb-3">Add New Order</a>
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-dark">
        <tr>
            <th>Order ID</th>
            <th>Partition Key</th>
            <th>Row Key</th>
            <th>Timestamp</th>
            <th>ETag</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.PartitionKey</td>
                <td>@order.RowKey</td>
                <td>@order.Timestamp?.UtcDateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@order.ETag.ToString()</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>