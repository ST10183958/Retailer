@model RetailWebApp.Models.orders

@{
    ViewBag.Title = "Add Order";
    var customers = ViewData["Customers"] as List<RetailWebApp.Models.Customer>;
    var products = ViewData["Products"] as List<RetailWebApp.Models.Products>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Add New Order</h2>

    <form asp-action="AddOrder" method="post">
        <div class="mb-3">
            <label class="form-label">Customer</label>
            <select asp-for="ID" class="form-select" required>
                <option value="">Select Customer</option>
                @foreach (var c in customers)
                {
                    <option value="@c.ID">@c.CustomerFirstName @c.CustomerLastName</option>
                }
            </select>
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Product</label>
            <select asp-for="ProductID" class="form-select" required>
                <option value="">Select Product</option>
                @foreach (var p in products)
                {
                    <option value="@p.ProductID">@p.ProductName</option>
                }
            </select>
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" type="number" class="form-control" min="1" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label">Order Date</label>
            <input asp-for="Date" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Order</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
