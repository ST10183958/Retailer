@model IEnumerable<RetailWebApp.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<p>
    <a asp-action="AddCustomer">Create New</a>
</p>
<div class="container mt-4">
    <h2>Customer List</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerFirstName</td>
                <td>@customer.CustomerLastName</td>
                <td>@customer.CustomerEmail</td>
                <td>
                    <form asp-action="DeleteCustomer" method="post" style="display:inline">
                        <input type="hidden" name="PartitionKey" value="@customer.PartitionKey" />
                        <input type="hidden" name="RowKey" value="@customer.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>