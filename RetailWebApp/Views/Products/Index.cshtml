@model IEnumerable<RetailWebApp.Models.Products>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<p>
    <a asp-action="AddProduct">Create New</a>
</p>
<div class="container mt-4">
    <h2>Customer List</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td><img src="@product.ProductImage" alt="Customer Image" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;"></td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>