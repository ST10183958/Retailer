@model RetailWebApp.Models.Products

@{
    ViewBag.Title = "Add Product";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Add New Product</h2>
    <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Product Image</label>
            <input type="file" name="ProductImage" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" min="0" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price ($)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" min="0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>