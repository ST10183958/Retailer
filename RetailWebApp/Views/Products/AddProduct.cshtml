@model RetailWebApp.Models.Products

@{
    ViewData["Title"] = "Add Product";
}

<h2>Add New Product</h2>

<form asp-action="AddProduct" asp-controller="Products" enctype="multipart/form-data" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <label for="file">Product Image</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-4">Add Product</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}